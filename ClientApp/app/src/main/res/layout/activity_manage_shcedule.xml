<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageShcedule"
    android:background="@drawable/house_img">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLay0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@color/white1">
        <LinearLayout
            android:id="@+id/linlay0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints,UselessParent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal"
                android:paddingTop="15dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_log_out"
                    android:background="@drawable/background_task_type"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="2dp"
                    android:padding="10dp"
                    android:onClick="LogOut"
                    android:contentDescription="TODO"
                    tools:ignore="OnClick" />
                <Spinner
                    android:id="@+id/DayOrWeek"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    />
                <Spinner
                    android:id="@+id/AllOrScienceOrTask"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:visibility="invisible"
                    />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prev"
            android:onClick="Prev"
            app:layout_constraintTop_toBottomOf="@id/linlay0"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp" />
        <LinearLayout
            android:id="@+id/linlay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@id/linlay0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/MonthAndDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APR 13"
                android:fontFamily="@font/ibmplexsanscondensedbold"
                android:paddingRight="5dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
            android:onClick="Next"
            app:layout_constraintTop_toBottomOf="@id/linlay0"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:id="@+id/linlay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/linlay1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="35dp"
            >

            <TextView
                android:id="@+id/item0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Items"
                tools:ignore="OnClick"
                android:paddingBottom="20dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Items"
                android:paddingBottom="20dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Items"
                android:paddingBottom="20dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Items"
                android:paddingBottom="20dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/item4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Items"
                android:paddingBottom="20dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/item5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Items"
                android:paddingBottom="20dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/item6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="Items"
                android:paddingBottom="20dp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linlay2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/bb0"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/ColdBlue"
                android:alpha="0"/>
            <TextView
                android:id="@+id/bb1"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/ColdBlue"
                android:alpha="0"/>
            <TextView
                android:id="@+id/bb2"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/ColdBlue"
                android:alpha="0"/>
            <TextView
                android:id="@+id/bb3"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/ColdBlue"
                android:alpha="0"/>
            <TextView
                android:id="@+id/bb4"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/ColdBlue"
                android:alpha="0"/>
            <TextView
                android:id="@+id/bb5"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/ColdBlue"
                android:alpha="0"/>
            <TextView
                android:id="@+id/bb6"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="@color/ColdBlue"
                android:alpha="0"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ListView
        android:id="@+id/ShceduleList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="398dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLay0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ListView>
</androidx.constraintlayout.widget.ConstraintLayout>