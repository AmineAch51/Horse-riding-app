<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/listview_shape"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_time"
                android:paddingTop="6dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="0.1"/>
            <TextView
                android:id="@+id/Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:15-15:30"
                android:textSize="20dp"
                android:fontFamily="@font/exofont"
                android:textColor="#353B48"
                android:layout_weight="0.6"
                />
            <TextView
                android:id="@+id/TypeOfJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Science"
                android:textColor="@color/white"
                android:background="@drawable/background_science_type"
                android:textAlignment="center"
                android:fontFamily="@font/exofont"
                android:padding="10dp"
                android:layout_weight="0.5"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                tools:ignore="NestedWeights" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.90"
                android:text="This is nothing"/>
            <ImageView
                android:id="@+id/modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingEnd="1dp"
                android:layout_marginEnd="17dp"
                android:src="@drawable/ic_pen"
                android:background="@drawable/yellow_back"
                android:contentDescription="TODO"
                tools:ignore="RtlSymmetry" />
            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingEnd="1dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_trash"
                android:background="@drawable/red_back"
                android:contentDescription="TODO"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>