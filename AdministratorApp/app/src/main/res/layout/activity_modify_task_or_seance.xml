<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/house_img"
    android:orientation="vertical"
    tools:context=".modify_task_or_seance">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:contentDescription="TODO"
        android:onClick="Return"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_back_arrow_white_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,OnClick" />
    <TextView
        android:id="@+id/job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="New Job"
        android:textSize="40dp"
        android:fontFamily="@font/exofont"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Monitor : "
            android:layout_weight="2"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ibmplexsanscondensedbold"
            android:textSize="20sp"/>
        <Spinner
            android:id="@+id/monitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textAlignment="center" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Client : "
            android:layout_weight="2"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ibmplexsanscondensedbold"
            android:textSize="20sp"/>
        <Spinner
            android:id="@+id/client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textAlignment="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="startDate : "
            android:layout_weight="5"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ibmplexsanscondensedbold"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/Year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center" />
            <Spinner
                android:id="@+id/Month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center" />
            <Spinner
                android:id="@+id/Day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="starTime : "
            android:layout_weight="5"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ibmplexsanscondensedbold"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="50dp"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/Hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center" />
            <Spinner
                android:id="@+id/Minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Duration : "
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ibmplexsanscondensedbold"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/Duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:textColor="@color/white"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/exofont"
            tools:ignore="LabelFor,TextFields" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Comment : "
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ibmplexsanscondensedbold"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/Comment"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:textColor="@color/white"
            android:fontFamily="@font/exofont"
            tools:ignore="LabelFor,TextFields" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Title : "
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ibmplexsanscondensedbold"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/Title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:textColor="@color/white"
            android:fontFamily="@font/exofont"
            tools:ignore="LabelFor,TextFields" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Detail : "
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ibmplexsanscondensedbold"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/Detail"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints=""
            android:textColor="@color/white"
            android:fontFamily="@font/exofont"
            tools:ignore="LabelFor,TextFields" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="isDone : "
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ibmplexsanscondensedbold"
            android:textSize="20sp"/>
        <CheckBox
            android:id="@+id/Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/white"
        android:fontFamily="@font/ubuntumonoregular"
        android:background="@drawable/bottom0"
        android:onClick="Modify"
        android:text="Confirm modification"
        tools:ignore="OnClick" />
</LinearLayout>